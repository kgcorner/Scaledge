        </plugins>
    </build>

    <profiles>
        <profile >
            <id>build</id>
            <activation>
                <property>
                    <name>buildDocker</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.spotify</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <configuration>
                            <entryPoint>["java","-jar", "/${project.build.finalName}.jar"]</entryPoint>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

